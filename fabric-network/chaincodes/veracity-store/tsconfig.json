{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "typeRoots": ["node_modules/@types", "src/types"],
        "outDir": "dist",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": false,
        "lib": ["ES2021.String", "ES7", "dom"],
        "resolveJsonModule": true,
        "types": ["node"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}

{
    "openapi": "3.0.0",
    "info": {
        "title": "Fabric API",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8801"
        }
    ],
    "tags": [
        {
            "name": "user",
            "description": "User operations"
        },
        {
            "name": "channel",
            "description": "Operations on a channel"
        }
    ],
    "paths": {
        "/user/enroll": {
            "post": {
                "tags": [
                    "user"
                ],
                "operationId": "getToken",
                "summary": "Get token",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "secret": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "id": "admin",
                                    "secret": "adminpw"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "token": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/reenroll": {
            "post": {
                "tags": [
                    "user"
                ],
                "operationId": "renewToken",
                "summary": "Regenerate token",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/user/register": {
            "post": {
                "tags": [
                    "user"
                ],
                "operationId": "registerUser",
                "summary": "Register",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "secret": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/user/identities": {
            "get": {
                "tags": [
                    "user"
                ],
                "operationId": "listUsers",
                "summary": "List users",
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/discover/{channelId}": {
            "post": {
                "tags": [
                    "channel"
                ],
                "operationId": "discover",
                "summary": "Discover channel",
                "parameters": [
                    {
                        "name": "channelId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "ptx-veracity"
                    }
                ],
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/invoke/{channelId}/{chaincodeId}": {
            "post": {
                "tags": [
                    "channel"
                ],
                "operationId": "invoke",
                "summary": "Invoke chaincode operation",
                "parameters": [
                    {
                        "name": "channelId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "ptx-veracity"
                    },
                    {
                        "name": "chaincodeId",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "veracity-proof-handler"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/InvokeBody"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Success"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Error"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    
    "components": {
        "schemas": {
            "InvokeBody": {
                "type": "object",
                "properties": {
                    "method": {
                        "type": "string"
                    },
                    "args": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "transient": {
                        "type": "object"
                    }
                },
                "example": {
                    "method": "get",
                    "args": [
                        "test"
                    ],
                    "transient": {}
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "message": {
                        "type": "string"
                    }
                },
                "required": [
                    "message"
                ]
            },
            "Success": {
                "type": "object",
                "properties": {
                    "response": {
                        "type": "object"
                    }
                },
                "required": [
                    "response"
                ]
            }
        },
        "securitySchemes": {
            "BearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    }
}